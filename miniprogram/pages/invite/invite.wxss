/* 弹框设置 - start */
.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 520rpx;
  margin-left: 15%;
  margin-top: 40%;
  box-sizing:border-box
}

.toast-title {
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  overflow:hidden
}

.toast-button {
  display: flex;
  overflow:hidden;
  flex-direction: row;
}

.button1 {
  width: 260rpx;
  border-color: red;
  border-right-style: solid;
}

.button2 {
  width: 260rpx;
}

.button1 button {
  /* width: 100%; */
  width: 260rpx;
  background-color: white;
  color: red;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}

.button2 button{
  width: 100%;
  /* width: 260rpx; */
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
}

